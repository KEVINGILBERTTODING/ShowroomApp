<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".features.transactions.user.ui.fragments.UserHistoryTransaction">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"

            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Transaksi"
                    android:fontFamily="@font/sembold"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvStatus"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>


                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:id="@+id/progressLoadTrans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include

                            layout="@layout/list_history_transactions_shimmer"/>

                        <include

                            layout="@layout/list_history_transactions_shimmer"/>

                        <include

                            layout="@layout/list_history_transactions_shimmer"/>

                        <include

                            layout="@layout/list_history_transactions_shimmer"/>

                    </LinearLayout>




                </com.facebook.shimmer.ShimmerFrameLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactions"
                    android:layout_marginTop="@dimen/_20sdp"
                    tools:listitem="@layout/list_history_transactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lrErrorLogin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/sembold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:text="Akses Ditolak"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/med"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_10ssp"
                    android:textAlignment="center"
                    android:text="Anda perlu login untuk mengakses menu ini"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:id="@+id/btnLogin"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="Login"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lrError"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/sembold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:text="Terjadi kesalahan"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/med"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_10ssp"
                    android:textAlignment="center"
                    android:text="@string/err_message"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:id="@+id/btnRefresh"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="Muat Ulang"/>
            </LinearLayout>





            <LinearLayout
                android:id="@+id/lrEmpty"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/sembold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"
                    android:text="Tidak ada data"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/med"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_10ssp"
                    android:textAlignment="center"
                    android:text="Riwayat transaksi Anda akan muncul disini."
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vOverlay"
            android:visibility="gone"
            android:background="@color/overlay"/>



        <!--        Bottom sheet bar rating -->

        <RelativeLayout
            android:id="@+id/bottomSheetRating"
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:paddingTop="@dimen/_14sdp"
            android:background="@drawable/container_bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    app:tint="@color/card"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="Penilaian"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/sembold"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"/>


                    <ProgressBar
                        android:layout_width="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/progressReview"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_height="@dimen/_18sdp"/>

                    <TextView
                        android:id="@+id/btnSubmitReview"
                        android:layout_width="wrap_content"
                        android:text="Simpan"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/med"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/ratingBar"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:progressTint="@color/primary"
                            android:layout_height="wrap_content"/>



                        <RelativeLayout
                            android:layout_width="match_parent"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_alignParentTop="true"
                                android:id="@+id/cvReviewImagePicker"
                                app:cardCornerRadius="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                app:cardElevation="0dp"
                                android:layout_height="@dimen/_40sdp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:background="@drawable/bg_add_picture"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:layout_width="@dimen/_20sdp"
                                        android:tint="@color/card"
                                        android:layout_centerInParent="true"
                                        android:layout_height="@dimen/_20sdp"
                                        android:src="@drawable/baseline_add_24"/>
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvImageReview"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@id/cvReviewImagePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>





                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/til_review"
                                android:fontFamily="@font/med"

                                android:textColor="@color/black"
                                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                                app:cursorColor="@color/primary"

                                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                                app:boxCornerRadiusTopStart="@dimen/_10sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etReview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Ketikan sesuatu...."
                                    android:fontFamily="@font/med"
                                    android:gravity="start"
                                    android:editable="false"
                                    android:lines="3"
                                    android:textColorHint="@color/black"
                                    android:inputType="textMultiLine"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"></com.google.android.material.textfield.TextInputEditText>
                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>





                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>



        <!--        Bottom sheet detail transaction-->

        <RelativeLayout
            android:id="@+id/bottomSheetDetailTransaction"
            android:layout_width="match_parent"
            android:padding="@dimen/_16sdp"
            android:paddingTop="@dimen/_14sdp"
            android:background="@drawable/container_bottom_sheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBarDetailTrans"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:id="@+id/scrollDetailTrans"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        app:tint="@color/card"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_toRightOf="@id/btnBack"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/sembold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/black"
                            android:text="Detail Transaksi"
                            android:layout_height="wrap_content"/>


                        <TextView

                            android:layout_toRightOf="@id/btnBack"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/med"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:text="TRX-USR-19-2024-04-14-10-28-24"
                            android:id="@+id/tvTransactionCode"
                            android:layout_height="wrap_content"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:contentPadding="@dimen/_5sdp"
                            android:id="@+id/cvStatusTrans"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/soft_green"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proses Finance"
                                android:fontFamily="@font/med"
                                android:textSize="@dimen/_8ssp"
                                android:id="@+id/tvStatusTrans"
                                android:textColor="@color/green"/>
                        </androidx.cardview.widget.CardView>



                        <ImageView
                            android:layout_width="match_parent"
                            android:tint="@color/card"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/dot_divider"
                            android:layout_height="@dimen/_6sdp"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:columnCount="3"
                            android:rowCount="2"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/tvDateTransaction"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:text="1 April 2024"
                                android:layout_height="wrap_content"/>




                        </GridLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:columnCount="3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:rowCount="5"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:text="Nama Customer"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:id="@+id/tvFullName"
                                android:text="Rp. 00"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:text="No Handphone"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:id="@+id/tvPhoneNumber"
                                android:text="082323232311"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="3"
                                android:text="Alamat"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="3"
                                android:id="@+id/tvAddress"
                                android:text="Jl. Merpati Raya No.32"
                                android:layout_height="wrap_content"/>





                        </GridLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:tint="@color/card"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/dot_divider"
                            android:layout_height="@dimen/_6sdp"/>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:columnCount="3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:rowCount="5"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:text="Merk / Type"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:id="@+id/tvCarName"
                                android:text="Rp. 00"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:text="Plat"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:id="@+id/tvPlatNumber"
                                android:text="H23231"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="3"
                                android:text="Tahun"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="3"
                                android:id="@+id/tvCarYear"
                                android:text="2016"
                                android:layout_height="wrap_content"/>


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="4"
                                android:text="Kapasitas Mesin"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="4"
                                android:id="@+id/tvEngineCapacity"
                                android:text="23.000 CC"
                                android:layout_height="wrap_content"/>





                        </GridLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:tint="@color/card"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/dot_divider"
                            android:layout_height="@dimen/_6sdp"/>


                        <GridLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:columnCount="3"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:rowCount="6"
                            android:layout_height="wrap_content">

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:text="Metode Pembayaran"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="0"
                                android:id="@+id/tvPaymentmethod"
                                android:text="Rp. 00"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:visibility="gone"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:text="Finance"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:visibility="gone"
                                android:textColor="@color/black"
                                android:layout_row="1"
                                android:id="@+id/tvFinanceName"
                                android:text="Adira"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_column="0"
                                android:textColor="@color/black"
                                android:layout_row="2"
                                android:text="Harga Mobil"
                                android:layout_height="wrap_content"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:fontFamily="@font/med"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="2"
                                android:textColor="@color/black"
                                android:layout_row="2"
                                android:id="@+id/tvCarPrice"
                                android:text="Rp. 230.000.000"
                                android:layout_height="wrap_content"/>



                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:fontFamily="@font/sembold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_10ssp"
                                android:layout_column="0"
